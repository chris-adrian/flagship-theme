/* --- Product Page --- */
#AddToCart:not(:disabled) {
  background-color: green;
  color: black;
}

#AddToCart:not(:disabled):hover {
  background-color: blue;
}

.product-page img {
  width: 100%;
  height: auto;
}
.product-page .main-img {
  max-width: 450px;
}

.product-page .thumbs-img {
  max-width: 100px;
}

.product-page .form-control {
  width: 100%;
  max-width: 400px;
  margin: auto;
}

/* --- Collection Page --- */
.product-list .list-group-item {
  -webkit-box-shadow: inset 0px 0px 5px 0px rgba(0, 0, 0, 0.06);
  box-shadow: inset 0px 0px 5px 0px rgba(0, 0, 0, 0.06);
  background-color: #fafafa;
}
.product-list .item img {
  width: 100%;
  height: auto;
  max-width: 250px;
}

.product-list h2 + b {
  font-size: 24px;
}

/* --- Pagination  --- */
.visuallyhidden {
  border: 0;
  clip: rect(0 0 0 0);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute;
  width: 1px;
  white-space: nowrap;
}

.pagination.center {
  justify-content: center;
}

.pagination li {
  display: inline;
  margin: 0 5px;
}
