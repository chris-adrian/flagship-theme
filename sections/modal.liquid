<section class="modal modal-dialog">
  <div class="modal-content container">
    <div class="modal-header">
      <h4 class="modal-title"><a href="/cart">Cart Information</a></h4>
      <button type="button" class="close" onclick="toggleModal(this, true)">
        &times;
      </button>
    </div>

    <div class="modal-body text-center">
      <div class="row">
        <div class="col-md-2">In stock:<br /><span id="m-prdQty"></span></div>
        <div class="col-md-6">
          <hr class="hidden-md-up" />
          <a href="/cart">Items</a>
          <hr />
          <ul class="container" id="m-cart-items"></ul>
        </div>
        <div class="col-md-2">
          <hr class="hidden-md-up" />
